CC=@CC@
LD=@CC@
PREFIX=@prefix@

CFLAGS=@CFLAGS@
DAEMON=runns
CLIENT=runnsctl
LIBRUNNS_ENABLE=@LIBRUNNS@
HELPER_LIB=$(if $(filter-out $(LIBRUNNS_ENABLE),no),librunns.so)
HELPER=build-net clean-net
_ := $() $()
comma := ,

all: $(DAEMON) $(CLIENT) $(HELPER_LIB)

$(DAEMON): runns.o
	$(CC) -o $@ $<

$(CLIENT): $(CLIENT).o
	$(CC) -o $@ $<

$(HELPER_LIB): librunns.c
	$(CC) -o $@ -shared -fPIC $<

tests/%: tests/%.c queue.c
	$(CC) -I. -Itau/ -o $@ $^

.PHONY: clean
clean:
	rm -f $(DAEMON) $(CLIENT) $(HELPER_LIB) *.o

.PHONY: install
install: $(DAEMON) $(CLIENT) $(HELPER)
	mkdir -p $(DESTDIR)/$(PREFIX)/bin
	cp $^ $(DESTDIR)/$(PREFIX)/bin/
	chmod 755 $(DESTDIR)/$(PREFIX)/bin/{$(subst $(_),$(comma),$^)}

.PHONY: uninstall
uninstall: $(CLIENT) $(DAEMON) $(HELPER)
	rm -f $(DESTDIR)/$(PREFIX)/bin/{$(subst $(_),$(comma),$^)}

.PHONY: distclean
distclean:
	rm -vrf $(DAEMON) $(CLIENT) *.o Makefile autom4te.cache config.log config.status
